{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["dom", "es2020"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": false, // ESLint's job
    "noUnusedParameters": false, // ESLint's job
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
